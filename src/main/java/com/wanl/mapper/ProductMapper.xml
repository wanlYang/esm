<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanl.mapper.ProductMapper">

    <select id="findHotProduct" resultMap="productResultMap">
        SELECT * FROM esm_product WHERE is_hot = 1 ORDER BY RAND() LIMIT 8

    </select>
    <resultMap id="productResultMap" type="product">
        <id column="id" property="id"></id>
        <result column="main_title" property="mainTitle"></result>
        <result column="main_title" property="mainTitle"></result>
        <result column="sub_title" property="subTitle"></result>
        <result column="price" property="price"></result>
        <result column="old_price" property="oldPrice"></result>
        <result column="buy_count" property="buyCount"></result>
        <result column="img" property="img"></result>
        <result column="detail" property="detail"></result>
        <result column="is_hot" property="isHot"></result>
        <result column="stock" property="stock"></result>
        <result column="shelf_time" property="shelfTime"></result>
        <association column="cate_id" property="category" select="com.wanl.mapper.CategoryMapper.findCateById"></association>
    </resultMap>
    <select id="findProductById" resultMap="productResultMap">
        SELECT * FROM esm_product WHERE id = #{id}
    </select>
</mapper>
